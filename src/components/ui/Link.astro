---
// filepath: /home/jramma/Git/lightpaint/src/components/ui/Link.astro
interface Props {
  href: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  rel?: string;
  text: string;
  className?: string;
}

const {
  href,
  target = "_self",
  rel = "noopener noreferrer",
  className,
  text,
} = Astro.props;
const isCurrent = Astro.url.pathname === href;
---

<a 
  href={href} 
  target={target} 
  rel={rel} 
  class={`animated-link ${isCurrent ? 'font-semibold text-2xl' : ''}`}
  aria-current={isCurrent ? "page" : undefined}
>
  {text}
</a>
