---
import "@/styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hamburger from "@/components/react/Hamburger";
import DeskMenu from "@/components/DeskMenu.astro";
import Footer from "@/components/Footer.astro";
import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style is:inline>
      /* Critical above-the-fold styles */
      body {
        font-family: "Roboto Condensed", sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 100%;
        margin: 0 auto;
      }
    </style>
  </head>
  <body class="flex flex-col items-center min-h-screen relative max-w-screen p-0 m-0 " >
    <main
      class="container min-h-screen px-2 flex flex-col gap-10 overflow-hidden mx-auto relative"
    >
      <a
        href="/"
        class="absolute top-0 left-0 rounded-b-xl rounded-l-none cursor-pointer z-20"
      >
        <Icon name="signature" class="h-20 w-20" />
      </a>
      <slot />
      <DeskMenu />
      <Hamburger client:idle />
    </main>
    <Footer />
  </body>
</html>
